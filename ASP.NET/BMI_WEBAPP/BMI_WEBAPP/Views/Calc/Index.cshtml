@model BMI_WEBAPP.Models.calc
@{
    ViewBag.Title = "Index";
}


<html>

<head>

</head>
  
  <body >
      <h1>!!!! BMI CALCULATOR !!!</h1>
        
      <div class="row">
          @using (Html.BeginForm("/Index", "calc", FormMethod.Post))
          {
              <div class="form-group">
                  <label for="weight" > weight POUNDS </label>
                  <input type="number" class="form-control" id="weight" name="weight" value="@Model.weight" />
              </div>
              <div class="form-group">
                  <label for="height"> height INCHES</label>
                  <input type="number" class="form-control" id="height" name="height" value="@Model.height" />
              </div>

              <div class="form-group">
                  <label for="bmi"> BMI </label>
                  <input type="text" class="form-control" id="bmi" name="bmi" value="@Model.bmi" />
              </div>

              <div class="form-group">
                  <label for="bmi_text"> BMI </label>
                  <input type="text" class="form-control" id="bmi_text" name="bmi_text" value="@Model.bmi_text" />
              </div>

              <button type="submit" class="btn btn-info" id="bmi"  value="bmic" name="calculate">SUBMIT</button>
          }

      </div>

  </body>   

</html>

